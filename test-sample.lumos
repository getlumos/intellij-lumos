#[solana]
#[account]
struct PlayerAccount {
    /// Player's wallet address
    wallet: PublicKey,

    /// Current score
    score: u64,

    /// Player level (1-100)
    level: u16,

    /// Inventory items
    items: Vec<u8>,

    /// Optional email
    email: Option<String>,

    /// Last login timestamp
    last_login: i64,
}

#[solana]
enum GameState {
    /// Game is currently active
    Active,

    /// Game is paused
    Paused,

    /// Game finished with final score
    Finished(u64),
}

/* Multi-line block comment
   for testing comment highlighting
   and syntax support */

#[solana]
struct Config {
    max_players: u32,
    enabled: bool,
    min_level: u8,

    // Decimal number
    price: u64,

    // Hex number
    hex_value: u64, // 0xFF

    // Binary number
    binary_value: u8, // 0b1010
}

